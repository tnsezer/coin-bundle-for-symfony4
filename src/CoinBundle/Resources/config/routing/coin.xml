<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="coin_create" path="/coin/create" methods="GET POST">
        <default key="_controller">CoinBundle:Coin:create</default>
    </route>

    <route id="coin_check" path="/coin/check" methods="POST">
        <default key="_controller">CoinBundle:Coin:check</default>
    </route>

</routes>
